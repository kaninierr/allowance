<asp:SqlDataSource ID="SqlDataSource2" runat="server" 
    ConnectionString="<%$ ConnectionStrings:allowancs_dbConnectionString %>" 
    SelectCommand="SELECT [sno], [idno], [name], [accno], [month] FROM [claimtbl]"
    DeleteCommand="DELETE FROM [claimtbl] WHERE [sno] = @sno"
    UpdateCommand="UPDATE [claimtbl] SET [idno] = @idno, [name] = @name, [accno] = @accno, [month] = @month WHERE [sno] = @sno">
    <DeleteParameters>
        <asp:Parameter Name="sno" Type="Int32" />
    </DeleteParameters>
    <UpdateParameters>
        <asp:Parameter Name="idno" Type="String" />
        <asp:Parameter Name="name" Type="String" />
        <asp:Parameter Name="accno" Type="String" />
        <asp:Parameter Name="month" Type="String" />
        <asp:Parameter Name="sno" Type="Int32" />
    </UpdateParameters>
</asp:SqlDataSource>

